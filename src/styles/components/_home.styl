.main
    width 100%
    min-height 100vh
    padding 30px 50px
    background-color color-primary
    background-image url('../../assets/bg-desktop.svg')
    background-repeat no-repeat
    background-position center

header
  width 100%
  height 80px
  display flex
  align-items end

  img
    width 10%


main
  display flex

  .mockups
    width 100%
    display flex
    justify-content center
    align-items center

    img
      width 100%


  .content
    width 100%
    height auto
    padding 40px
    h1
      font-size 32px
      font-weight 700
      color: color-secondary
      font-family font-heading

    p
      padding 20px 0
      font-size 16px
      line-height 1.5em
      letter-spacing 0.02em
      color color-secondary
      font-family font-body

    button
      border none
      border-radius 30px
      font-weight 400
      padding 13px 60px
      margin-top 30px
      box-shadow 3px 4px 6px 6px rgba(0,0,0,0.2)
      font-weight 400
      font-size 16px
      font-family font-heading
      color color-primary
      background-color color-secondary
      &:hover
        cursor pointer

footer
  width 100%
  padding-top 10px
  .rrss
    width 100%
    display flex
    justify-content flex-end
    svg
      margin 0 10px
      &:hover
        cursor pointer

  .code
    text-align: center
    color color-secondary
    font-family font-body
    p
      margin 0
      font-size: 12px
      letter-spacing 0.06em
      font-family font-heading

    a
      text-decoration none
      color #13c4a3
      &:hover
        text-decoration underline
